{
  "functions": {
    "api/stripe-webhook.js": {
      "maxDuration": 10
    },
    "api/secure-download.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/thank-you",
      "destination": "/thank-you.html"
    }
  ],
  "redirects": [
    {
      "source": "/private/(.*)",
      "destination": "/404",
      "statusCode": 404
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/private/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow, noarchive, nosnippet, noimageindex"
        }
      ]
    }
  ]
}