  "deployment_commands": {
    "add_all_production_vars": "cat vercel-env-setup.json | jq -r '.variables[] | select(.target[]? == \"production\") | \"vercel env add \" + .key + \" production\"'",
    "add_development_vars": "cat vercel-env-setup.json | jq -r '.development[] | \"vercel env add \" + .key + \" development\"'",
    "list_required_vars": "cat vercel-env-setup.json | jq -r '.variables[] | select(.required == true) | .key'"
  },
  "setup_instructions": [
    "1. Install Vercel CLI: npm i -g vercel",
    "2. Login to Vercel: vercel login",
    "3. Link project: vercel link",
    "4. Add environment variables:",
    "   vercel env add STRIPE_PUBLISHABLE_KEY production",
    "   vercel env add STRIPE_SECRET_KEY production",
    "   vercel env add GA4_MEASUREMENT_ID production",
    "   (repeat for all required variables)",
    "5. Deploy: vercel --prod"
  ],
